@import 'nib'

@font-face
  font-family 'Roboto'
  font-style normal
  font-weight 400
  src local('Roboto Regular'), local('Roboto-Regular'), url(/media/fonts/roboto.woff) format('woff')

*
  font-family 'Roboto', sans-serif

html
  background url('/media/images/portada.jpg') 0 0
  background-size cover
  height 100%
  margin 0
  max-width 100%
  width 100%

body
  background-color rgba(255,255,255,0)
  margin 0
  margin-top 4em

@media screen and (max-width: 992px)
  html
    background-size 100% 100%

@media screen and (min-width: 1100px)
  .table-responsive
    overflow-x auto

@media screen and (max-width:650px)
  html
    background-size 100% 100%

@media screen and (max-width: 480px)
  html
    background-size 100% 100%

::-webkit-scrollbar
    width 12px

::-webkit-scrollbar-track
  -webkit-box-shadow #000
  -webkit-border-radius 10px
  border-radius 10px

::-webkit-scrollbar-track-piece
  background-color #000
  background-color rgba(2,2,2,0.6)

::-webkit-scrollbar-thumb
  -webkit-border-radius 10px
  border-radius 10px
  background #fff
  background rgba(240,240,240,0.4)
  -webkit-box-shadow inset 0 0 3px rgba(20,20,20,0.2)
  &:hover
    background #fff
    background rgba(254,254,254,0.8)
    -webkit-box-shadow inset 0 0 4px rgba(120,120,120,0.5)
  &:window-inactive
    background #e6e6e6
    background rgba(250,250,250,0.8)

.ui-widget
  font-size 12px
  margin-left auto
  margin-right auto
  max-width 42em

.ui-combobox
  position relative
  display inline-block
  font-size 12px

.ui-combobox-toggle
  position absolute
  top 0
  bottom 0
  margin-left -1px
  padding 0
  *height 1.7em
  *top 0.1em
  font-size 12px

.ui-combobox-input
  margin 0
  padding 0.3em
  font-size 12px
  width 26em

.text-red
  color #f00
  &:hover
    color #900

.text-green
  color #5cb85c
  &:hover
    color #357935

.text-blue
  color #428bca
  &:hover
    color #245682

.matname-global
  border-radius 4px
  max-height 22em
  padding-left 0
  margin-bottom 0
  margin-top 0
  overflow-y auto
  overflow-x hidden
  position relative
  z-index 0
  li
    background-color #fff
    border 1px solid #ddd
    display block
    margin-bottom -1px
    padding 2px 2px
    position relative
    a
      cursor pointer
      font-family Arial sans-serif Helvetica
      font-size 12px
      text-decoration none
      width 100%
      &:hover
        color #000
    &:first-child
      border-top-left-radius 4px
      border-top-right-radius 4px
    &:last-child
      border-bottom-left-radius 4px
      border-bottom-right-radius 4px
  .item-selected
    background-color #ddd
    color #000

.matname-global li:hover, .matname-global li:hover a
  background-color #ddd
  color #000

.upload-green
  background-color #007a96

.full-screen
  background-color rgba(2,2,2,.4)
  height 100%
  left 0
  position fixed
  top 0
  width 100%
  & > iframe
    height 92.5%
    margin-top -1.8%
    width 100%

.text-bold
  font-weight bold

.table-responsive-height
  height 450px
  max-height 520px
  overflow-y auto
  overflow-x hidden

.col-1 /* size for items, checkbox, radio, buttons icons*/
  /*max-width 40px*/
  min-width 40px
  width 40px

.col-2 /* size for quantity, prices, amount */
  /*max-width 70px*/
  min-width 70px
  width 70px

.col-3 /* size for code, id */
  /*max-width 130px*/
  min-width 130px
  width 130px

.col-4 /* size field observation small */
  /*max-width 164px*/
  min-width 164px
  width 164px

.col-5 /* size for description small diameter */
  /*max-width 270px*/
  min-width 235px
  width 235px

.col-6 /* size for description */
  /*max-width 290px*/
  min-width 280px
  width 280px

.col-12
  /*max-width 1098px*/
  min-width 1098px
  width 1098px

table > tbody > tr > td.content-details
  padding 0px
  margin-bottom 0px